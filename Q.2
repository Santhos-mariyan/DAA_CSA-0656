#include <stdio.h>
#include <math.h>
int count_digits(int num) {
    int count = 0;
    while (num != 0) {
        num /= 10;
        count++;
    }
    return count;
}
int is_armstrong(int num) {
    int original_num = num;
    int num_digits = count_digits(num);
    int sum = 0;
    while (num != 0) {
        int digit = num % 10;
        sum += pow(digit, num_digits);
        num /= 10;
    }
    return (sum == original_num);
}
